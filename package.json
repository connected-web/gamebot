{
  "name": "gamebot",
  "version": "2.0.2",
  "description": "Gamebot for slack",
  "main": "index.js",
  "scripts": {
    "start": "npm run gamebot",
    "stop": "pm2 delete 'Gamebot'",
    "restart": "pm2 restart 'Gamebot'",
    "status": "pm2 status",
    "build": "./scripts/build.sh",
    "deploy": "npm test && npm run build && ./scripts/deploy.sh",
    "gamebot": "pm2 start index.js --name 'Gamebot'",
    "test": "standard --fix && mocha --recursive",
    "index-emojis": "node emojis/create-index.js",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "pre-commit": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:connected-web/gamebot.git"
  },
  "keywords": [
    "slack",
    "bot",
    "board",
    "games"
  ],
  "author": "John Beech",
  "license": "ISC",
  "dependencies": {
    "fs-extra": "^4.0.1",
    "glob": "^7.0.5",
    "grammarlist": "^1.0.0",
    "product-monitor": "^2.3.2",
    "promise-path": "^1.2.4",
    "redis": "^2.8.0",
    "slackbots": "^0.5.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "mocha": "^2.5.3",
    "pre-commit": "^1.2.2",
    "sinon": "^4.0.0",
    "standard": "^10.0.2"
  }
}
